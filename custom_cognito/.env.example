# AWS Cognito Configuration
# Region donde está configurado tu User Pool de Cognito
AWS_REGION=us-east-1

# ID del User Pool de Cognito
# Ejemplo: us-east-1_ABC123def
COGNITO_USER_POOL_ID=your-user-pool-id

# ID del App Client configurado en el User Pool
# Ejemplo: 1abc2def3ghi4jkl5mno6pqr
COGNITO_APP_CLIENT_ID=your-app-client-id

# Secret del App Client (opcional, solo si está configurado con secret)
# Si tu App Client no tiene secret, deja esta variable vacía o no la incluyas
COGNITO_APP_CLIENT_SECRET=

# Application Configuration
# URL del frontend para configurar CORS
FRONTEND_URL=http://localhost:3000

# URL de Redis para manejo de sesiones
REDIS_URL=redis://localhost:6379/0

# Secret key para JWT (genera una clave segura)
# Puedes generar una con: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-here

# Entorno de ejecución (development, staging, production)
ENVIRONMENT=development

# Token Configuration
# Tiempo de expiración del access token en minutos
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Tiempo de expiración del refresh token en días
REFRESH_TOKEN_EXPIRE_DAYS=30